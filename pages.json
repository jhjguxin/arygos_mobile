{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^form-(.*)": "@/components/custom_form/fields/form-$1.vue",
      // "^form-text-field": "@/components/custom_form/form-text-field",
      // "^form-(.*)": "@/components/custom_form/fields/form-$1.vue",
      "^custom-form": "@/components/custom_form/custom-form",
      "^custom-form-field": "@/components/custom_form/custom-form-field",
      "^collapse-custom-field": "@/components/custom_form/collapse-custom-field"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/workbench/workbench",
      "style": {
        "navigationBarTitleText": "工作台",
        "app-plus": {
          "titleNView": {
            "autoBackButton": false
          }
        }
      }
    },
    {
      //登陆
      "path": "pages/auth/login/login",
      "style": {
        "navigationBarTitleText": "登陆",
        "app-plus": {
          "titleNView": {
            "autoBackButton": false
          }
        }
      }
    },
    {
      "path" : "pages/todo/todo",
      "style": {
        "navigationBarTitleText": "代办",
        "app-plus": {
          "titleNView": {
            "autoBackButton": false
          }
        }
      }
    },
    {
      "path" : "pages/report/report",
      "style": {
        "navigationBarTitleText": "报表中心",
        "app-plus": {
          "titleNView": {
            "autoBackButton": false
          }
        }
      }
    },
    {
      "path" : "pages/me/me",
      "style": {
        "navigationBarTitleText": "我的"
      },
      "app-plus": {
        "titleNView": {
          "autoBackButton": false
        }
      }
    },
    {
      "path" : "pages/quickPlus/quickPlus",
      "style": {
        "navigationBarTitleText": "快捷新增"
      }
    },
    {
      "path" : "pages/setting/setting",
       "style": {
        "navigationBarTitleText": "设置"
      }
    },
    {
      "path" : "pages/notification/notification",
      "style": {
        "navigationBarTitleText": "消息"
      }
    },
    {
      "path" : "pages/lead/leadNew/leadNew",
      "style": {
        "navigationBarTitleText": "新增线索"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "CRM",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "borderStyle": "black",
    "backgroundColor": "#009ff4",
    "color": "#ebeaf7",
    "selectedColor": "#FFFFFF",
    "list": [{
        "pagePath": "pages/workbench/workbench",
        "iconPath": "static/img/tabbar/home.png",
        "selectedIconPath": "static/img/tabbar/homeActive.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/todo/todo",
        "iconPath": "static/img/tabbar/todoList.png",
        "selectedIconPath": "static/img/tabbar/todoListActive.png",
        "text": "代办"
      },
      {
        "pagePath": "pages/quickPlus/quickPlus",
        "iconPath": "static/img/tabbar/plus.png",
        "selectedIconPath": "static/img/tabbar/plusActive.png"
      },
      {
        "pagePath": "pages/report/report",
        "iconPath": "static/img/tabbar/salesReport.png",
        "selectedIconPath": "static/img/tabbar/salesReportActive.png",
        "text": "报表"
      },
      {
        "pagePath": "pages/me/me",
        "iconPath": "static/img/tabbar/user.png",
        "selectedIconPath": "static/img/tabbar/userActive.png",
        "text": "我的"
      }
    ]
  }
}
